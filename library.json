{
    "name": "roo_scheduler",
    "description": "Arduino-compliant microcontroller library for scheduling delayed and/or repetitive tasks. Works on boards that support C++ standard library (e.g. Espressif ESP32 family).",
    "keywords": [
        "tasks",
        "scheduling",
        "periodic",
        "delayed"
    ],
    "authors": [
        {
            "name": "Dejwk",
            "email": "dejwk.oss@gmail.com",
            "maintainer": true
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/dejwk/roo_scheduler"
    },
    "version": "2.1.6",
    "homepage": "https://github.com/dejwk/roo_scheduler",
    "frameworks": [
        "Arduino",
        "*"
    ],
    "build": {
        "srcDir": "src",
        "srcFilter": "+<*> -<examples> -<test>"
    },
    "examples": [
        "examples/*/*.ino"
    ],
    "dependencies": {
        "dejwk/roo_collections": ">=1.4.0",
        "dejwk/roo_threads": ">=1.2.0",
        "dejwk/roo_time": ">=1.4.0"
    }
}